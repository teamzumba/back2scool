<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Quiz</title>
    <link rel="stylesheet" href="/css/quiz.css">
  </head>
  <body>
    <div class="container">
      <div class="leftSide">
        <img src="B2S_Logo.png" alt="quiz logo" class="tilt">
      </div>
      <div class="rightSide">
        <h1>Welcome to Online Quiz</h1>
        <h2>Instructions:</h2>
        <ul>
          <li>10 Questions (30 sec each)</li>
          <li>Total Time: 5 mins</li>
          <li>Random Questions</li>
        </ul>
        <form action="/questions" method="post">
        <button type="submit">Let's Start </button>
      </form>
      </div>
    </div>
  </body>
  <script src="js/jquery-3.5.1.min.js"></script>
  <script src="js/tilt.min.js"></script>
  <script>
    $(".tilt").tilt({
      scale: 1.2,
    });
  </script>
</html>
